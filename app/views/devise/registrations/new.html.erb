<header class="wrapper text-center">
  <strong>Sign up</strong>
</header>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",
     placeholder: "First Name", class: "form-control rounded input-lg text-center no-border" %>
  </div>

  <div class="form-group">
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name",
     placeholder: "Last Name", class: "form-control rounded input-lg text-center no-border" %>
  </div>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
     placeholder: "Email", class: "form-control rounded input-lg text-center no-border" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "new-password",
    placeholder: "Password", class: "form-control rounded input-lg text-center no-border" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "new-password",
    placeholder: "Confirm Password", class: "form-control rounded input-lg text-center no-border" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-lg btn-warning lt b-white b-2x btn-block btn-rounded" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
