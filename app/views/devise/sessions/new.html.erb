<header class="wrapper text-center">
  <strong>Log in to get in touch</strong>
</header>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
     placeholder: "Email", class: "form-control rounded input-lg text-center no-border" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "current-password",
    placeholder: "Password", class: "form-control rounded input-lg text-center no-border" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="checkbox m-l m-r-xs">
      <label class="i-checks"> <%= f.check_box :remember_me %><i></i> Remember me </label>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-lg btn-warning lt b-white b-2x btn-block btn-rounded" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
