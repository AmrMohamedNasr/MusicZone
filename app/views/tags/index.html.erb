<section>
    <section class="vbox">
      <%= form_tag({action: :create}, multipart: true) do |f| %>
        <section class="scrollable padder-lg w-f-md" id="bjax-target"><a
                href="http://flatfull.com/themes/musik/index.html#"
                class="pull-right text-muted m-t-lg" data-toggle="class:fa-spin"><i
                class="icon-refresh i-lg inline" id="refresh"></i></a>

                <h2 class="font-thin m-b">Choosen your favourite tags <span class="musicbar animate inline m-l-sm"
                                                         style="width:20px;height:20px"> <span
                        class="bar1 a1 bg-primary lter"></span> <span class="bar2 a2 bg-info lt"></span> <span
                        class="bar3 a3 bg-success"></span> <span
                        class="bar4 a4 bg-warning dk"></span> <span
                        class="bar5 a5 bg-danger dker"></span> </span></h2>
                <div class="row row-sm">
                  <div class="m-b-sm">
                    <div data-toggle="buttons">
                      <% @tags.each do |tag| -%>
                        <label class="btn btn-rounded btn-lg <% if @user.tags.include?(tag) %>btn-success active<% end %> <% if @user.tags.include?(tag) == false %>btn-default<% end %>">
                          <input onchange="swapSelection(this)" type="checkbox" name="options[]" value="<%= tag.id %>" <% if @user.tags.include?(tag) %> checked <% end %>>
                          <%= tag.value %>
                        </label>
                      <% end %>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-lg-4 col-lg-offset-8">
                    <%= submit_tag "Save Changes", class:"btn btn-primary btn-block" %>
                  </div>
                </div>
        </section>
      <% end %>
    </section>
</section>
